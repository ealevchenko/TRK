@section styles {
    @Styles.Render("~/jquery-ui/css")
    @Styles.Render("~/DataTables/css")
    @Styles.Render("~/DateTime/css")
    @Styles.Render("~/d3/css")
    <link rel="stylesheet" type="text/css" href="~/Content/report/report.css">

    <style>

        text {
            font: 12px sans-serif;
        }

        svg {
            display: block;
        }

        html, body, #chart1, svg {
            margin: 0px;
            padding: 0px;
            height: 600px;
            width: 100%;
        }

        .dashed {
            stroke-dasharray: 5,5;
        }
    </style>
}

@section scripts {
    @Scripts.Render("~/bundles/Ajax")
